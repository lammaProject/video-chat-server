                },
                "created": {
                    "type": "boolean"
                },
                "message": {
                    "type": "string"
                }
            }
        },
        "routes.FriendRequest": {
            "type": "object",
            "properties": {
                "friend_id": {
                    "type": "string"
                },
                "user_id": {
                    "type": "string"
                }
            }
        },
        "routes.FriendStatus": {
            "type": "string",
            "enum": [
                "pending",
                "accepted"
            ],
