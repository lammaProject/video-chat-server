                        "description": "Данные для создания чата",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/routes.CreateChatRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Чат успешно создан или пользователь присоединен к существующему",
                        "schema": {
                            "$ref": "#/definitions/routes.CreateChatResponse"
                        }
                    }
                }
            }
        },
