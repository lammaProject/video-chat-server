    "definitions": {
        "routes.AcceptedFriendRequest": {
            "type": "object",
            "properties": {
                "friend_id": {
                    "type": "string"
                }
            }
        },
        "routes.CreateChatRequest": {
            "type": "object",
            "properties": {
                "friend_id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "type_chat": {
