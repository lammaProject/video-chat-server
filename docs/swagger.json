                    "type": "string"
                },
                "name": {
                    "type": "string"
                }
            }
        },
        "routes.TypeChat": {
            "type": "string",
            "enum": [
                "private",
                "group"
            ],
            "x-enum-varnames": [
                "TypeChatPrivate",
                "TypeChatGroup"
            ]
